<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tosit.web.dao.IChannalDao">
	
    <resultMap type="Channal" id="channalBean">  
        <id column="id" property="id"/>  
        <result column="name" property="name"/>  
          
        <!-- 一对多的关系 -->  
        <!-- property: 指的是集合属性的值, ofType：指的是集合中元素的类型 -->  
        <collection property="channals" ofType="com.tosit.web.entity.Channal">  
            <id column="id" property="id"/>  
            <result column="name" property="name"/>  
 
        </collection>  
    </resultMap>    
       
   
    <select id="getChannalById" parameterType="int" resultMap="channalBean">  
        SELECT c.*,t.* FROM channal c,channal t  WHERE  c.id=t.parent_child 
    </select>  
	
</mapper>


